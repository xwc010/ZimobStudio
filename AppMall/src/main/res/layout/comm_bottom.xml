<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_libs_feed_item_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/size_libs_small"
        android:textColor="@color/color_libs_gray"
        android:text="flag" />

    <TextView
        android:id="@+id/tv_libs_feed_item_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/size_libs_small"
        android:textColor="@color/color_libs_gray"
        android:text="the poster name" />


    <ImageView
        android:id="@+id/img_libs_feed_item_brow_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_libs_browse"/>

    <TextView
        android:id="@+id/tv_libs_feed_item_brow_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_libs_small"
        android:textColor="@color/color_libs_gray"
        android:text="999+" />

</LinearLayout>
