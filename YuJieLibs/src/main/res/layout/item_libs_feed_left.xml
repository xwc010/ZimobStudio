<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/fl_sds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_libs_feed_left_cion"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@color/banner_desc_text_color"/>

        <include
            layout="@layout/comm_libs_video_img_time_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"/>

        <ImageView
            android:id="@+id/img_libs_feed_left_video_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_lock_silent_mode"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_libs_feed_left_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fl_sds"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:text="刚刚给浏览量电风扇归属感连接连接让地方司法"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/comm_libs_feed_bottom"
        android:layout_alignBottom="@+id/fl_sds"
        android:layout_alignRight="@+id/tv_libs_feed_left_title"
        android:layout_alignLeft="@+id/tv_libs_feed_left_title"
        android:layout_toRightOf="@+id/fl_sds"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#20000000"
        android:layout_below="@+id/fl_sds"/>
</RelativeLayout>
