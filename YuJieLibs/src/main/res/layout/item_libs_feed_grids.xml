<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:background="@drawable/selector_libs_item_bg">

    <TextView
        android:id="@+id/tv_libs_feed_girds_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/size_libs_large"
        android:textColor="@color/color_libs_black"
        android:text="刚刚给浏览量电风扇归属感连接连接让地方司法个个都是个"/>

    <GridView
        android:id="@+id/gv_libs_feed_girds_imgs"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:layout_below="@+id/tv_libs_feed_girds_title"/>

    <TextView
        android:id="@+id/tv_libs_feed_girds_describe"
        android:layout_below="@+id/gv_libs_feed_girds_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingRight="17dp"
        android:paddingLeft="17dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:textSize="@dimen/size_libs_common"
        android:textColor="@color/color_libs_gray_mid"
        android:text="风刀霜剑风刀霜剑都加上破电视剧打扫房间的拍摄风景都怕死飞机大商品房解放军 的皮肤的拍摄风景拍摄附近啪设计费发"/>


    <include
        android:id="@+id/ll_libs_feed_grids_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        layout="@layout/comm_libs_feed_bottom"
        android:layout_below="@+id/tv_libs_feed_girds_describe"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#20000000"
        android:layout_below="@+id/ll_libs_feed_grids_bottom"/>
</RelativeLayout>
